{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "./public",
        "outDir": "dist",
        "watchAssets": true
      },
      {
        "include": "./views",
        "outDir": "dist",
        "watchAssets": true
      },
      {
        "include": "./images",
        "outDir": "dist",
        "watchAssets": true
      },
      {
        "include": "./data",
        "outDir": "dist",
        "watchAssets": true
      }
    ],
    "watchAssets": true
  }
}
