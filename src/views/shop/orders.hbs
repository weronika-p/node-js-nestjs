<main>
    {{#if orders.length}}
        <ul class='orders'>
            {{#each orders}}
                <li class='orders__item'>
                    <h1>Order - # {{this.id}} - <a href='/orders/{{this.id}}'>Invoice</a></h1>
                    <ul class='orders__products'>
                        {{#each this.orderItems}}
                            <li class='orders__products-item'>{{this.product.title}} ({{this.quantity}})</li>
                        {{/each}}
                    </ul>
                </li>
            {{/each}}
        </ul>
    {{else}}
        <h1>Nothing there!</h1>
    {{/if}}
</main>