<main>
    {{#if prods.length}}
        <div class="grid">
            {{#each prods}}
                <article class="card product-item">
                    <header class="card__header">
                        <h1 class="product__title">{{this.title}}</h1>
                    </header>
                    <div class="card__image">
                        <img src="/{{this.imageUrl}}" alt="{{this.title}}">
                    </div>
                    <div class="card__content">
                        <h2 class="product__price">{{this.price}}</h2>
                        <p class="product__description">{{this.description}}</p>
                    </div>
                    <div class="card__actions">
                        <a href="/admin/edit-product/{{this.id}}?edit=true" class="btn">Edit</a>
                        <input type='hidden' value='{{this.id}}' name='productId'>
                        <button class="btn" type="button" onclick="deleteProduct(this)">Delete</button>
                    </div>
                </article>
            {{/each}}
        </div>
    {{else}}
        <h1>No products</h1>
    {{/if}}
</main>
<script src='/js/admin.js'></script>