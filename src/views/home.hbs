<main>
    {{#if prods.length}}
        <div class="grid">
            {{#each prods}}
                <article class="card product-item">
                    <header class="card__header">
                        <h1 class="product__title">{{this.title}}</h1>
                    </header>
                    <div class="card__image">
                        <img src="{{this.imageUrl}}" alt="{{this.title}}">
                    </div>
                    <div class="card__content">
                        <h2 class="product__price">{{this.price}}</h2>
                        <p class="product__description">{{this.description}}</p>
                    </div>
                    <div class="card__actions">
                        <a href='/products/{{this.id}}' class='btn'>Details</a>
                        {{#if ../isAuthenticated}}
                            {{> formAddToCart id=id}}
                        {{/if}}
                    </div>
                </article>
            {{/each}}
        </div>
        {{> pagination isNotFirstPage=isNotFirstPage hasPreviousPage=hasPreviousPage currentPage=currentPage
        hasNextPage=hasNextPage nextPage=nextPage canLastPageBeDisplayed=canLastPageBeDisplayed previousPage=previousPage
        lastPage=lastPage}}
    {{else}}
        <h1>No products</h1>
    {{/if}}
</main>